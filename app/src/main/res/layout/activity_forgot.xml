<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="landscape"
    android:background="@drawable/aplicativo_textura"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="danna.net.gadapp.Forgot">

    <TextView
        android:text="@string/recovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblrecovery"
        android:layout_above="@+id/txtrecovery"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="61dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtrecovery"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btncancel"
        android:layout_alignEnd="@+id/btncancel" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnrecovery"
        android:src="@drawable/m_recuperar"
        android:background="#00ffffff"
        android:layout_toStartOf="@+id/btncancel"
        android:layout_marginRight="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btncancel"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btncancel"
        android:src="@drawable/m_cancelar"
        android:background="#00ffffff"
        android:layout_marginRight="221dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClick"/>

</RelativeLayout>
