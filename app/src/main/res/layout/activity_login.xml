<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation"
    android:screenOrientation="landscape"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/aplicativo_texturaa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Login">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnlogin"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/m_ingresar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnnew"
        android:src="@drawable/m_registrate"

        android:clickable="true"
        android:focusable="true"
        android:layout_alignBottom="@+id/btnlogin"
        android:layout_toLeftOf="@+id/btnlogin"
        android:layout_toStartOf="@+id/btnlogin"
        android:layout_marginRight="73dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnforgot"
        android:src="@drawable/m_recuerdame"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_alignBottom="@+id/btnlogin"
        android:layout_toRightOf="@+id/btnlogin"
        android:layout_toEndOf="@+id/btnlogin"
        android:layout_marginLeft="76dp" />
    <TextView
        android:text="@string/usernanme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTitle"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:id="@+id/textView2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        /> />

    <EditText
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/username"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="130dp" /> />

    <EditText
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"

        android:layout_marginLeft="250dp"
        android:layout_marginTop="180dp" /> />
</RelativeLayout>
