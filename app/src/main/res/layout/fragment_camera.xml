<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="980dp"
    android:layout_marginLeft="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/aplicativo_textura"
    tools:context="danna.net.gadapp.cameraFragment"
    android:id="@+id/cameraFragment">

    <!-- TODO: Update blank fragment layout -->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo de la Denuncia:"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/lblTitlen"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:layout_gravity="top|left|center_horizontal"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcion:"
        android:id="@+id/textView2"
        android:layout_gravity="left|top"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="30dp" />

    <EditText
        android:layout_width="337dp"
        android:layout_height="125dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtDescription"
        android:layout_gravity="left|top"
        android:editable="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="100dp" />

    <ImageView
        android:layout_width="720dp"
        android:layout_height="352dp"
        android:id="@+id/imgCam"
        android:layout_gravity="left|bottom|right"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_gravity="top|right"
        android:src="@drawable/m_enviar"
        android:layout_marginTop="20dp"
        android:layout_marginRight="250dp" />

</FrameLayout>
